@model IEnumerable<KooliProjekt.Data.Tournament>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TournamentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TournamentStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TournamentEndtDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TournamentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TournamentStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TournamentEndtDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TournamentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TournamentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TournamentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
